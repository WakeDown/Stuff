@using Stuff.Models
@using Stuff.Objects
@model IEnumerable<Stuff.Models.EngeneerState>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Статусы инженеров";
    bool userCanEdit = ViewBag.CurUser.HasAccess(AdGroup.EngeneerStateEdit);
}
@if (userCanEdit)
{
    <p>
        <a href='@Url.Action("New", "EngeneerState")' class="btn btn-primary">
            <i class="fa fa-plus"></i> новый
        </a>
    </p>
}
<p>
    <span class="text-danger">@ViewData["error"]</span>
</p>
@if (Model != null && Model.Any())
{
    <Table class="table table-bordered">
        <thead>
            <tr class="bg-primary">
                @if (userCanEdit)
                {
                    <th></th>
                }
                <th>№</th>
                <th>Инженер</th>
                <th>
                    @*<a href=@Url.Action("Index", "EngeneerState", new {asc = field!=0?true:!asc, field = 0}) class="text-white">*@
                        Вендор
                        @*@if (field != 0)
        {<i class="fa fa-sort"></i>}
        else
        {
            if (asc)
            {<i class="fa fa-sort-desc"></i>}
            else
            {<i class="fa fa-sort-asc"></i>}
        }
    </a>*@
                </th>
                <th>
                    @*<a href=@Url.Action("index", "VendorState", new {asc = field!=1?true:!asc, field = 1}) class="text-white">*@
                        Статус
                        @*@if (field != 1)
        {<i class="fa fa-sort"></i>}
        else
        {
            if (asc)
            {<i class="fa fa-sort-desc"></i>}
            else
            {<i class="fa fa-sort-asc"></i>}
        }
    </a>*@
                </th>
                @*<th>Описание</th>*@
                <th>Картинка</th>
                <th class="text-center">
                    @*<a href=@Url.Action("index", "VendorState", new {asc = field!=2?true:!asc, field = 2}) class="text-white">*@
                        Дата окончания
                        @*@if (field != 2)
                        {<i class="fa fa-sort"></i>}
                        else
                        {
                            if (asc)
                            {<i class="fa fa-sort-desc"></i>}
                            else
                            {<i class="fa fa-sort-asc"></i>}
                        }
                    </a>*@
                </th>
                <th class="text-center">
                    @*<a href=@Url.Action("index", "VendorState", new {asc = field!=3?true:!asc, field = 3}) class="text-white">*@
                        Юр лицо Юнит
                        @*@if (field != 3)
                        {<i class="fa fa-sort"></i>}
                        else
                        {
                            if (asc)
                            {<i class="fa fa-sort-desc"></i>}
                            else
                            {<i class="fa fa-sort-asc"></i>}
                        }
                    </a>*@
                </th>
                <th class="text-center">
                    @*<a href=@Url.Action("Index", "VendorState", new {asc = field!=4?true:!asc, field = 4}) class="text-white">*@
                        Язык оригинала
                        @*@if (field != 4)
                        {<i class="fa fa-sort"></i>}
                        else
                        {
                            if (asc)
                            {<i class="fa fa-sort-desc"></i>}
                            else
                            {<i class="fa fa-sort-asc"></i>}
                        }
                    </a>*@
                </th>
                @if (userCanEdit)
                {
                    <th>История</th>
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var vnd in Model)
            {
                i++;
                <tr id="vs-@vnd.Id">
                    @if (userCanEdit)
                    {
                        <td class="valign-middle">
                            <a class="btn btn-link" href="@Url.Action("Edit", "EngeneerState", new {id = vnd.Id})" data-toggle="tooltip" title="изменить"><i class="fa fa-edit"></i></a>
                        </td>
                    }
                    <td class="valign-middle">@i</td>
                    <td class="valign-middle">@vnd.EngeneerName</td>
                    <td class="valign-middle">@vnd.VendorName</td>
                    <td class="valign-middle">@vnd.StateName</td>
                    @*<td>@vnd.StateDescription</td>*@
                    <td class="text-center">
                        @if (vnd.Picture != null)
                    {
                        <a class="btn btn-link" href="@Url.Action("GetImage", "EngeneerState", new {id = vnd.Id})" target="_blank" data-toggle="tooltip" title="Картинка"><img id="pic-min" src="@Url.Action("GetImage", "EngeneerState", new {id = vnd.Id, curIm = ViewBag.CurIm})" width="50" /></a>
                    }
                </td>
                <td class="@(vnd.EndDate.Date<=DateTime.Now.Date? "bg-danger":String.Empty) text-center valign-middle">
                    @(vnd.EndDate.ToShortDateString().Equals("03.03.3333") ? "бессрочно" : vnd.EndDate.ToString("dd.MM.yyyy"))
                <td class="text-center valign-middle">@vnd.UnitOrganizationName</td>
                <td class="text-center valign-middle">@vnd.LanguageName</td>
                @if (userCanEdit)
                {
                    <td class="valign-middle">
                        <a href="@Url.Action("History", "EngeneerState", new {id = vnd.Id})" target="_blank">История</a>
                    </td>
                    <td class="valign-middle">
                        <button name="delete-vnd" class="btn btn-link" vndId="@vnd.Id" data-toggle="tooltip" title="удалить"><i class="fa fa-trash"></i></button>
                    </td>
                }
            </tr>
            }
        </tbody>

    </Table>
}
else
{
    @:пусто
}

@section scripts
{
    <script type="text/javascript">

        $(document).ready(function() { init_vnd_list(); });

        function init_vnd_list() {
            $("[name='delete-vnd']").click(deleteVendorState);
        }
        function deleteVendorState() {
            if (!confirm('Вы действительно хотите удалить статус?')) return;
            var id = $(this).attr('vndId');
            $.post("@Url.Action("Delete", "EngeneerState")", { id: id }, function(data) {
                if (data != null && data != '') {
                    alert(data);
                } else {
                    window.location.reload();
                }
            }
            );
        }
    </script>
}